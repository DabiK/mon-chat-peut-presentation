    <script>
      // Initialize AOS
      AOS.init({
        duration: 1000,
        once: true,
        offset: 100,
      });

      // Particles.js configuration
      particlesJS("particles-js", {
        particles: {
          number: { value: 80, density: { enable: true, value_area: 800 } },
          color: { value: "#FF9A76" },
          shape: { type: "circle" },
          opacity: { value: 0.3, random: true },
          size: { value: 3, random: true },
          line_linked: {
            enable: true,
            distance: 150,
            color: "#FF9A76",
            opacity: 0.2,
            width: 1,
          },
          move: {
            enable: true,
            speed: 2,
            direction: "none",
            random: true,
            straight: false,
            out_mode: "out",
            bounce: false,
          },
        },
        interactivity: {
          detect_on: "canvas",
          events: {
            onhover: { enable: true, mode: "repulse" },
            onclick: { enable: true, mode: "push" },
            resize: true,
          },
        },
        retina_detect: true,
      });

      // Scroll progress bar
      window.addEventListener("scroll", () => {
        const scrollProgress = document.getElementById("scrollProgress");
        const scrollTop =
          document.documentElement.scrollTop || document.body.scrollTop;
        const scrollHeight =
          document.documentElement.scrollHeight -
          document.documentElement.clientHeight;
        const scrollPercentage = (scrollTop / scrollHeight) * 100;
        scrollProgress.style.width = scrollPercentage + "%";

        // Floating CTA visibility
        const floatingCTA = document.getElementById("floatingCTA");
        if (scrollTop > 500) {
          floatingCTA.classList.add("visible");
        } else {
          floatingCTA.classList.remove("visible");
        }
      });

      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute("href"));
          if (target) {
            target.scrollIntoView({ behavior: "smooth", block: "start" });
          }
        });
      });

      // Email form submission with anti-spam protection
      const emailForm = document.getElementById("mc-embedded-subscribe-form");
      const successMessage = document.getElementById("successMessage");
      const submitButton = emailForm.querySelector(".submit-btn");

      // V√©rifier si l'utilisateur a d√©j√† soumis le formulaire
      function checkIfAlreadySubscribed() {
        const hasSubscribed = localStorage.getItem("mcp_form_submitted");
        const subscriptionDate = localStorage.getItem("mcp_subscription_date");

        if (hasSubscribed === "true") {
          // Optionnel: permettre une nouvelle soumission apr√®s 30 jours
          if (subscriptionDate) {
            const thirtyDaysAgo = Date.now() - 30 * 24 * 60 * 60 * 1000;
            if (new Date(subscriptionDate).getTime() < thirtyDaysAgo) {
              return false; // Permettre une nouvelle soumission
            }
          }
          return true; // D√©j√† soumis
        }
        return false;
      }

      // Afficher le message si d√©j√† inscrit
      if (checkIfAlreadySubscribed()) {
        emailForm.style.display = "none";
        successMessage.classList.add("show");
        successMessage.querySelector("h3").textContent = "‚úÖ D√©j√† inscrit !";
        successMessage.querySelector("p").textContent =
          "Vous √™tes d√©j√† inscrit √† notre liste. Nous vous contacterons bient√¥t !";
      }

      emailForm.addEventListener("submit", async (e) => {
        e.preventDefault();

        // V√©rifier √† nouveau au moment de la soumission
        if (checkIfAlreadySubscribed()) {
          alert("Vous √™tes d√©j√† inscrit ! V√©rifiez votre bo√Æte mail.");
          return;
        }

        // D√©sactiver le bouton pour √©viter les double-clics
        submitButton.disabled = true;
        submitButton.textContent = "‚è≥ Inscription en cours...";

        // R√©cup√©rer l'email
        const emailInput = emailForm.querySelector("#mce-EMAIL");
        const email = emailInput.value;

        // Soumettre le formulaire √† Mailchimp via l'iframe cach√©e
        // Le formulaire se soumet naturellement gr√¢ce √† target="hidden_iframe"

        // Marquer comme soumis dans le localStorage
        setTimeout(() => {
          localStorage.setItem("mcp_form_submitted", "true");
          localStorage.setItem(
            "mcp_subscription_date",
            new Date().toISOString()
          );
          localStorage.setItem("mcp_subscribed_email", email);

          // Afficher le message de succ√®s
          emailForm.style.display = "none";
          successMessage.classList.add("show");

          // R√©activer le bouton (au cas o√π l'utilisateur rafra√Æchit)
          submitButton.disabled = false;
          submitButton.textContent = "‚ú® Je m'inscris";
        }, 1000);
      });
    </script>
